{
	"name": "Interactive Data Maps",
	"version": "0.1.0",

	"author": [
		"alex4401"
	],
	"url": "https://gitlab.mglolenstine.xyz/alex4401/mediawiki-extension-datamaps",
	"descriptionmsg": "data-maps-desc",
	"license-name": "GPL-3.0-or-later",
	"type": "parserhook",

	"requires": {
		"MediaWiki": ">= 1.37.0",
		"platform": {
			"php": ">= 7.4"
		}
	},

	"MessagesDirs": {
		"DataMaps.class": [
			"i18n"
		]
	},

	"ResourceFileModulePaths": {
		"localBasePath": "resources",
		"remoteExtPath": "DataMaps/resources"
	},

	"ResourceModules": {
		"ext.ark.datamaps.leaflet.core": {
			"scripts": [
				"vendor/leaflet/leaflet.js"
			],
			"styles": [
				"vendor/leaflet/leaflet.css"
			],
			"targets": [ "desktop", "mobile" ]
		},

		"ext.ark.datamaps.leaflet.loader": {
			"dependencies": [
				"ext.ark.datamaps.leaflet.core"
			],
			"scripts": [
				"loader.js"
			],
			"styles": [
				"styles.less"
			],
			"targets": [ "desktop", "mobile" ]
		}
	},

	"ContentHandlers": {
		"datamap": "DataMapContentHandler"
	},
	"AutoloadClasses": {
		"DataMapsHooks": "includes/Hooks.php",
		"DataMapEmbedRenderer": "includes/DataMapEmbedRenderer.php",
		"DataMapContent": "includes/content/DataMapContent.php",
		"DataMapContentHandler": "includes/content/DataMapContentHandler.php"
	},
	"Hooks": {
	},

	"config": {
		"ArkDataNamespace": {
			"description": "",
			"value": -1
		}
	},

	"manifest_version": 2
}
