{
    "include": [
      "modules/**/*.js",
      "modules/**/*.ts",
      "node_modules/types-mediawiki"
    ],
	"exclude": [
		"vendor",
		"modules/search"
    ],
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "Node",
		"target": "ES6",
		"lib": [
            "ES6",
            "ES2017.Object",
            "DOM"
        ],
		"baseUrl": "modules",
		"paths": {
			"ext.datamaps.core": [ "core/*" ],
			"ext.datamaps.leaflet": [ "leafletPkg/*" ]
		},
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strict": true,
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"newLine": "lf",
		"forceConsistentCasingInFileNames": true,
		"pretty": true
	}
}
